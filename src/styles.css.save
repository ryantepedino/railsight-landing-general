:root{--bg:#0f172a;--muted:#6b7280;--brand:#2563eb;--white:#ffffff}
*{box-sizing:border-box}
body{margin:0;font-family:Inter,system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;background:#f7f8fb;color:#0b1220}
.header{position:sticky;top:0;z-index:10;display:flex;align-items:center;justify-content:space-between;padding:12px 16px;background:#0f172a;color:#fff;border-bottom:1px solid rgba(255,255,255,.08)}
.brand{display:flex;align-items:center;gap:10px;font-weight:700;letter-spacing:.2px}
.brand img{height:28px}
.menu a{color:#e5e7eb;text-decoration:none;margin-left:16px;font-size:14px}
.menu a:hover{color:#fff}
/* === HERO com fundo ferroviário + overlay acessível === */
.hero {
  position: relative;
  display: grid;
  grid-template-columns: 1.2fr 1fr;
  gap: 24px;
  padding: 56px 16px;
  max-width: 1120px;
  margin: 0 auto;
  isolation: isolate; /* garante overlay acima do bg */
}

/* Fundo com imagem e overlay para contraste AA/AAA */
.hero::before {
  content: "";
  position: absolute;
  inset: 0;
  z-index: -2;
  background: url('/hero-trilhos.webp') center/cover no-repeat;
  filter: saturate(0.85);
}
.hero::after {
  content: "";
  position: absolute;
  inset: 0;
  z-index: -1;
  background: linear-gradient(180deg, rgba(15,23,42,0.85), rgba(15,23,42,0.72));
}

/* Card do hero sobre o overlay */
.hero-card {
  background: rgba(15,23,42,0.86);
  backdrop-filter: blur(2px);
  color: #fff;
  padding: 28px;
  border-radius: 16px;
  box-shadow: 0 12px 30px rgba(2,6,23,.35);
}

